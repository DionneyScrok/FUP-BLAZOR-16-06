
<EditForm Model="@financeiro" OnInvalidSubmit="@OnValidSubmit">
    <div class="form-group">
        <h3> <strong>Entrada: </strong> @financeiro.Entrada </h3>
    </div>
    <div class="form-group">
        <h3> <strong> Saída: </strong> @financeiro.Saida </h3>
    </div>
    <button type="submit" class="btn btn-primary" @onclick="OnValidSubmit">@ButtonText</button>

</EditForm>


@code
{ [Parameter] public Financeiro financeiro { get; set; }
  [Parameter] public string ButtonText { get; set; }
  [Parameter] public EventCallback OnValidSubmit { get; set; } }
